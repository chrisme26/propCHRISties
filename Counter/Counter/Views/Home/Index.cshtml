@{
    ViewBag.Title = "Counter";
}

<style type="text/css">
    .Table {
        display: table;
        margin: 0 auto;
    }

    .Row {
        display: table-row;        
    }

    .Cell {
        display: table-cell;
        border: solid;
        border-width: thin;
        width: 50px;
        height: 50px;
    }

    .Button {
        width: 100%;
        height: 100%;
    }
</style>

<h2>Counter Application</h2>

<hr />

<div class="Table">    
    <div class="Row">        
        <h1 id="incCount" style="width: auto; height: auto; text-align: center">0</h1>
    </div>
    <div class="Row">
        <input type="button" id="btnIncrease" value="Counter" onclick="incCounter()" />
    </div>
</div>

<script>
    function incCounter()
    {
        if ($("#incCount").text() <= 9) {

            $("#incCount").text(Number($("#incCount").text()) + 1);

            $.ajax({
                url: '@Url.Action("incCount", "Home")',
                data: { cnt: Number($("#incCount").text()) },
                type: 'post',
                dataType: 'json',
                success: function (data) {                    
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status + ' ' + thrownError);
                }
            });
        }
    }
</script>